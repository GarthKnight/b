<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llPicLine3"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@+id/llPicLine2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvPic7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="14dp"/>
            <ImageView
                android:layout_below="@+id/tvPic7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvPic8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="14dp"/>
            <ImageView
                android:layout_below="@+id/tvPic8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvPic9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="14dp"/>
            <ImageView
                android:layout_below="@+id/tvPic9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>