<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bvp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.appb.app.appb.custom.ForegroundImageView
        android:id="@+id/fivPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/ic_play1"
        android:layout_gravity="center"/>

    <com.halilibo.bettervideoplayer.BetterVideoPlayer
        android:id="@+id/bvpWebm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:keepScreenOn="true"
        bvp:bvp_autoPlay="false">






    </com.halilibo.bettervideoplayer.BetterVideoPlayer>

</FrameLayout>