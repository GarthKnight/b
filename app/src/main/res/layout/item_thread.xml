<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayBack">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/grayThred"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grayThred">

            <TextView
                android:id="@+id/tvDateThread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/right_thread"
                android:layout_marginTop="12dp"
                android:text="09/03/17 Чтв 15:18"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvThreadNumer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/right_thread"
                android:layout_marginTop="12dp"
                android:text="№000000000"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvThreadCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/tvThreadNumer"
                android:text="#1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvCommentThread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDateThread"
                android:layout_marginLeft="@dimen/right_thread"
                android:layout_marginTop="10dp"
                android:paddingRight="14dp"
                android:text="Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой. Пьяный серб убил акулу жопой."
                android:textColor="@color/black"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvThumbnails"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/tvCommentThread"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="6dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>